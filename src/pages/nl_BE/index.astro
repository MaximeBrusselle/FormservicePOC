---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
import { getLangFromUrl, useTranslations, useTranslatedPath } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Layout title={t("index.title")}>
	<main class="mx-auto p-4 max-w-[800px] text-xl leading-relaxed">
		<h1 class="text-6xl font-bold leading-none text-center mb-8">{t("index.welcome")} <span class="text-gradient dark:dark-text-gradient">Form service</span> by Adobe <span class="text-gradient dark:dark-text-gradient">POC</span></h1>
		<p class="instructions text-center dark:dark-instructions">
			{t("index.instructions")}<br />
			<strong class="text-accent-light dark:text-accent-dark">{t("index.note")}</strong> {t("index.only_customer_overview_implemented")}
		</p>
		<ul role="list" class="grid grid-cols-[repeat(auto-fit,minmax(24ch,1fr))] gap-8 p-0">
			<Card href={translatePath("/customers", lang)} title="Customer Overview" body="Browse through our customer list and access their dedicated forms." />
			<Card href={translatePath("/test", lang)} title="Testing page" body="Try out certain components on this route to see how they work." />
			<Card href="https://astro.build/themes/" title="Themes" body="Explore a galaxy of community-built starter themes." />
			<Card href="https://astro.build/chat/" title="Community" body="Come say hi to our amazing Discord community. ❤️" />
		</ul>
	</main>
</Layout>

<style>
	.astro-a {
		@apply absolute -top-8 left-1/2 -translate-x-1/2 w-[220px] z-[-1];
	}
</style>
